<% provide(:title, 'Volunteer') %>
<% provide(:button_text, 'Register') %>

<h1>Volunteer</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: @user %>

            <%= f.label "Email #{current_user.email}" %>

            <%= f.label :notes %>
            <%= f.text_area :notes, class: 'form-control' %>

            <%= f.submit "Request phone interview", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>

