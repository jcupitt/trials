<% provide(:title, 
    "#{@volunteer.user.name} volunteered for #{@volunteer.trial.name}") %>

<div class="row">

    <aside class="col-md-4">
        <section class="user_info">
            <h1> <%= link_to @volunteer.user.name, @volunteer.user %> </h1>
            <p><%= @volunteer.user.email %></p>
            <p><%= @volunteer.user.mobile %></p>
        </section>

        <section class="trial_info">
            <h1> <%= link_to @volunteer.trial.name, @volunteer.trial %> </h1>
        </section>
    </aside>

    <div class="col-md-8">
        <h3> <%= @volunteer.user.name %> volunteered for 
                <%= @volunteer.trial.name %> </h3>

        <ul class="volunteers">
            <li>
                <span class="notes"><%= @volunteer.notes %></span>
                <span class="timestamp"> 
                    Created <%= time_tag(@volunteer.created_at) %>
                </span>
                <span class="timestamp"> 
                    Last updated <%= time_tag(@volunteer.updated_at) %>
                </span>
            </li>
        </ul>

        <% if is_recruiter_or_admin? %>
            <%= link_to "Edit details", edit_volunteer_path(@volunteer), class: "btn btn-sm btn-primary" %>
        <% end %>
    </div>
</div>
