<% provide(:title, @user.name) %>

<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1> <%= @user.name %> </h1>
            <p><%= @user.email %></p>
            <p><%= @user.mobile %></p>
        </section>

        <% if is_admin? %>
          <%= link_to "Edit details", edit_user_path(@user), class: "btn btn-lg btn-secondary" %>
        <% end %>
    </aside>

    <div class="col-md-8">
        <% if @user.volunteers.any? %>
            <h3>Has volunteered</h3>
            <ol class="volunteers">
                <%= render @volunteers %>
            </ol>
            <%= will_paginate @volunteers %>
        <% end %>
    </div>

</div>
